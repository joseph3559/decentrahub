{
  "compilerOptions": {
    "target": "ES2020", // Targeting a modern version of ECMAScript
    "module": "commonjs", // Using CommonJS modules for Node.js compatibility
    "rootDir": "./src", // Source files directory
    "outDir": "./dist", // Output directory for compiled JavaScript
    "esModuleInterop": true, // Enables compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforces consistent file casing
    "strict": true, // Enables all strict type-checking options
    "skipLibCheck": true, // Skips type checking of declaration files
    "resolveJsonModule": true, // Allows importing JSON files
    "baseUrl": "./src", // Base directory for module resolution
    "paths": {
      "@/*": ["*"] // Alias for src directory (e.g., @/services/lens.service)
    },
    "experimentalDecorators": true, // If you plan to use decorators (e.g., with TypeORM or similar)
    "emitDecoratorMetadata": true   // If you plan to use decorators
  },
  "include": ["src/**/*.ts"], // Which files to include in compilation
  "exclude": ["node_modules", "dist"] // Which files/directories to exclude
}
